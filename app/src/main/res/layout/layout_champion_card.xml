<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/champion_card_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/green_header"
            android:fontFamily="@font/lemonada_semibold"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="10dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/champion_card_title"
            android:layout_marginBottom="10dp"
            android:background="@drawable/match_card_body">

            <ImageView
                android:id="@+id/champion_card_winner_image"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/champion_card_winner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/champion_card_winner_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lemonada_semibold"
                android:textColor="@color/colorDarkBackgroud"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/champion_card_winner_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/match_card_date"
                android:fontFamily="@font/lemonada_semibold"
                android:gravity="center"
                android:text="البطل"
                android:textColor="@color/colorWhite"
                android:textSize="10dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/best_keeper_rl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/keeper_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/keeper_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/keeper_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemonada_semibold"
                    android:textColor="@color/colorDarkBackgroud"
                    android:textSize="7dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/keeper_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/match_card_team_name"
                    android:fontFamily="@font/lemonada_semibold"
                    android:gravity="center"
                    android:text="أفضل حارس"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/best_player_rl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/player_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/player_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemonada_semibold"
                    android:textColor="@color/colorDarkBackgroud"
                    android:textSize="7dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/player_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/match_card_team_name"
                    android:fontFamily="@font/lemonada_semibold"
                    android:gravity="center"
                    android:text="أفضل لاعب"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scorer_rl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/scorer_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/scorer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/scorer_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lemonada_semibold"
                    android:textColor="@color/colorDarkBackgroud"
                    android:textSize="7dp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/scorer_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/match_card_team_name"
                    android:fontFamily="@font/lemonada_semibold"
                    android:gravity="center"
                    android:text="الهداف"
                    android:textColor="@color/colorWhite"
                    android:textSize="10dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>