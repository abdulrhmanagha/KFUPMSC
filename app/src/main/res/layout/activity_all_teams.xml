<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3f3f3f"
        tools:context="agha.kfupmscapp.Activities.AllTeamsActivity.AllTeamsActivity">

        <RelativeLayout
            android:id="@+id/all_teams_layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorGreenGradientEnd"
            android:elevation="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lemonada_semibold"
                android:gravity="center"
                android:text="الفرق"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/all_players_burger"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_menu" />

        </RelativeLayout>

        <EditText
            android:id="@+id/all_teams_search_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/all_teams_layout_toolbar"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_bar_layout"
            android:fontFamily="@font/lemonada_semibold"
            android:gravity="right|center_vertical"
            android:hint="البحث ..."
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/colorLightGray"
            android:textColorHint="@color/colorLightGray"
            android:textSize="10dp"
            android:textStyle="bold" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/all_teams_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/all_teams_search_bar">

            <GridView
                android:id="@+id/all_teams_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_menu_all_players"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#3f3f3f"
        android:clipToPadding="false"
        android:layoutDirection="rtl"
        android:paddingTop="120dp"
        android:textDirection="rtl"
        app:itemTextAppearance="@style/NavigationDrawerStyle"
        app:itemTextColor="@color/colorWhite"
        app:itemIconTint="@color/colorWhite"
        app:menu="@menu/nav_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="top"
            android:layout_marginTop="-120dp"
            android:background="#3f3f3f">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/club_logo" />

        </RelativeLayout>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>