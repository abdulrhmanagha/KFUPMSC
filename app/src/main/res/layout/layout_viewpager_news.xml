<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/viewpager_news_image_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDarkTransparent">

        <TextView
            android:id="@+id/viewpager_news_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الفرق تتأهب لجولة الحسم"
            android:fontFamily="@font/lemonada_semibold"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/viewpager_news_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="تنطلق مساء يوم الأحد الجولة الأخيرة من منافسات دور المجموعات لبطولة"
            android:textSize="8dp"
            android:fontFamily="@font/lemonada_semibold"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/viewpager_news_header"
            android:maxLines="2"
            android:ellipsize="end"
            />

    </RelativeLayout>


</RelativeLayout>