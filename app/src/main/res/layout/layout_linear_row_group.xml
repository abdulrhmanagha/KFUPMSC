<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorPlaceHolderLightGray"
    android:elevation="10dp">
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/defualt_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/group_team_image"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_team_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/group_team_image"
        android:textSize="10dp"
        android:text="Royals"
        android:fontFamily="@font/lemonada_semibold"
        android:textColor="@color/colorDarkGray"
        android:textStyle="bold"/>


</RelativeLayout>