<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorGreenGradientEnd</item>
        <item name="android:navigationBarColor">@color/colorGreenGradientEnd</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabbedViewText" parent="Base.Widget.Design.TabLayout">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lemonada_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/lemonada_semibold</item>
    </style>

</resources>
