<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agha.kfupmscapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DisplayNewsActivity.DisplayNews" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.NewsActivity.AllNewsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SplashActivity.Splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AllTeamsActivity.AllTeamsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".Activities.MatchesActivity.MatchesActivity"
            android:label="@string/title_activity_matches"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.ChampionsActivity.ChampoinsActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.AllPlayersActivity.AllPlayersActivity" android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activities.ScorerActivity.ScorerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.GroupsActivity.GroupsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DisplayTeamActivity.DisplayTeam" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.AboutSportClubActivity.AboutClubActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DevTeamActivity.DevTeamActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DisplayPlayerActivity.DisplayPlayerActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".Activities.DisplayMatchActivity.DisplayMatchActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>